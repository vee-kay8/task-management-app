# Backend Environment Variables
# Copy this to .env and update with your values

# Flask Configuration
FLASK_ENV=development
DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Secret Keys (CHANGE THESE IN PRODUCTION!)
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=dev-secret-key-please-change-me
JWT_SECRET_KEY=dev-jwt-secret-please-change-me

# Database
DATABASE_URL=postgresql://taskapp_user:devpassword123@localhost:5432/taskmanagement_db

# CORS (Frontend URL)
CORS_ORIGINS=http://localhost:3000

# JWT Token Expiration
JWT_ACCESS_TOKEN_EXPIRES=24

# File Uploads
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Application
APP_NAME=Task Management App
API_VERSION=v1
ITEMS_PER_PAGE=20
